<?xml version="1.0" encoding="utf-8"?>

<android.support.wear.widget.BoxInsetLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/dark_grey"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="it.denv.mnmlwatchface.WatchConfigColorActivity"
        tools:deviceIds="wear"
        android:padding="@dimen/box_inset_layout_padding">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <TextView
                android:text="@string/color_config_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView" android:textAlignment="center"
                android:layout_marginVertical="10dp" android:textStyle="bold"/>
        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/config_lv"
                android:paddingBottom="50dp"
                android:clipToPadding="false"
                android:scrollbarStyle="outsideOverlay"
        />
    </LinearLayout>
</android.support.wear.widget.BoxInsetLayout>

