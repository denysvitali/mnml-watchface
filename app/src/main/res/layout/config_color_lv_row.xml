<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:paddingStart="20dp"
>

    <ImageView android:id="@+id/row_item_image"
               android:layout_height="30dp"
               android:layout_width="30dp"
               android:layout_marginTop="5dp"
               android:contentDescription="@string/row_icon_content_description"
               android:layout_marginRight="20dp" android:src="@drawable/ic_color_lens"/>
    <TextView android:id="@+id/row_item_tv"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              tools:text="Element" 
              android:layout_gravity="center_vertical"/>
</LinearLayout>